;;; Alpaca init file
;;; loaded at Alpaca startup to customize
;;; the Alpaca lisp environment
;;; this is the standard default .alpaca that comes with the application
;;; and is loaded by default

(define-key *keymap* "C-f" 'forward-char)
(define-key *keymap* "C-b" 'backward-char)
(define-key *keymap* "C-p" 'previous-line)
(define-key *keymap* "C-n" 'next-line)
(define-key *keymap* "M-f" 'forward-word)
(define-key *keymap* "M-b" 'backward-word)
(define-key *keymap* "C-a" 'beginning-of-line)
(define-key *keymap* "C-e" 'end-of-line)
(define-key *keymap* "S-M-}" 'forward-paragraph)
(define-key *keymap* "S-M-{" 'backward-paragraph)
(define-key *keymap* "S-M->" 'end-of-document)
(define-key *keymap* "S-M-<" 'beginning-of-document)
(define-key *keymap* "C-v" 'page-down)
(define-key *keymap* "M-v" 'page-up)
(define-key *keymap* "C-l" 'recenter)
(define-key *keymap* "C-t" 'transpose-chars)
(define-key *keymap* "C-o" 'open-line)
(define-key *keymap* "M-u" 'upcase-word)
(define-key *keymap* "M-l" 'downcase-word)
(define-key *keymap* "M-c" 'capitalize-word)
(define-key *keymap* "C-d" 'delete-forward-char)
(define-key *keymap* "M-d" 'delete-forward-word)
(define-key *keymap* "M-DEL" 'delete-backward-word)
(define-key *keymap* "C-k" 'kill-line)
(define-key *keymap* "C-y" 'yank)
